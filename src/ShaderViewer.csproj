<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>ShaderViewer</RootNamespace>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="content\*.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="content\DroidSans.ttf" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="content\DroidSans.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="content\DroidSans.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GLSLhelper" Version="0.3.58" />
    <PackageReference Include="Zenseless.OpenTK" Version="0.1.46" />
    <PackageReference Include="Zenseless.Resources" Version="0.1.10" />
    <PackageReference Include="ImGui.NET" Version="1.87.3" />
    <PackageReference Include="DefaultEcs" Version="0.17.2" />
    <PackageReference Include="DefaultEcs.Analyzer" Version="0.17.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>